                demultiplexer = 'fqtk'
                outdir = "$outputDir"
                fastq_files = "out_L001_I1_001.fastq.gz out_L001_I2_001.fastq.gz out_L001_R1_001.fastq.gz out_L001_R2_001.fastq.gz"
                read_structures = "8B 8B 150T 150T"
